{% macro mainSection(id, classes="", alternating=false, thin=false) %}
  <div
    id="{{ id }}Wrapper"
    class="mainSectionWrapper {{classes}} {{ 'alternating' if alternating }}"
  >
    <section
      id="{{ id }}"
      class="mainSection {{ 'thin' if thin }}"
    >
      {{ caller() | safe }}
    </section>
  </div>
{% endmacro %}
