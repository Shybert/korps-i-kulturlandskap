{% macro icon(name, title, size="") %}
  <svg class="icon {{ size }}">
    <title>{{ title }}</title>
    <use xlink:href="/icons/icons.svg#{{ name }}" />
  </svg>
{% endmacro %}

{% macro conditionalAttribute(attribute, value, condition) -%}
  {% if condition -%}
    {{ attribute }}={{value}}
  {%- endif %}
{%- endmacro %}
