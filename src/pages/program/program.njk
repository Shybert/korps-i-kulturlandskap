---
permalink: /program/
---
{% set bodyClass = "program" %}
{% extends "layouts/base.njk" %}
{% from "utils.njk" import icon %}
{% from "components/lead.njk" import lead as leadComponent %}

{% block main %}
  {% set extra %}
    <a class="print button" href="/program/program.pdf">
      {{ icon("printer", "Printer", "large") }} Utskriftsversjon
    </a>
  {% endset %}
  {{ leadComponent(lead.title, lead.text, extra) }}

  <nav id="navProgram" class="mainSection">
    <div class="container">
      <ul>
        {% for day in program %}
          <li>
            <a class="button" href="#day{{ loop.index }}">{{ day.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </nav>

  {% for day in program %}
    <section id="day{{ loop.index }}" class="mainSection thin">
      <div class="container">
        <h2>{{ day.title }}</h2>

        {% for event in day.events %}
          <section class="event card rounded">
            <div class="eventTime">{{ event.time }}</div>
            <div class="eventInfo">
              <h3 class="eventTitle">{{ event.title }}</h3>
              <div class="eventDescription">
                {% markdown %}
                  {{ event.description }}
                {% endmarkdown %}
              </div>
            </div>
          </section>
        {% endfor %}
      </div>
    </section>
  {% endfor %}
{% endblock %}
